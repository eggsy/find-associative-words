{
  "private": true,
  "version": "2.0.0",
  "scripts": {
    "install": "cd server && npm istall && cd ../client && npm install",
    "build-server": "cd server && tsc",
    "start-server": "node ./server/dist/index.js",
    "build-client": "cd client && npm run build",
    "start-client": "cd client && npm run preview -- --host --port 4455",
    "build": "npm run build-server && npm run build-client",
    "dev": "concurrently \"nodemon ./server/index.ts\" \"cd client && npm run dev -- --host --port 4455\"",
    "start": "concurrently \"npm run start-server\" \"npm run start-client\""
  },
  "dependencies": {
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/node": "^18.8.0"
  }
}
