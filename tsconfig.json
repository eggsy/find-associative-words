{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["client/src/*"],
      "@server/*": ["server/*"]
    }
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.d.ts",
    "client/src/**/*.vue",
    "server/**/*.ts"
  ]
}
